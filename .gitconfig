[user]
	name = Said Nuh
	email = said@tv2.dk
[push]
	default = simple

[diff]
    tool = kdiff3
 
[difftool "kdiff3"]
    path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
    keepBackup = false
    trustExitCode = false

[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  df = diff
  dff = diff --word-diff
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p

 br = branch
 unstage = reset HEAD --
 last = log -1 HEAD
 root = git rev-parse --show-toplevel

[help]
  autocorrect = 1

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true


[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = red bold
  untracked = magenta bold

[color "branch"]
  remote = yellow
[core]
	pager = less -+$LESS -FRX
[pull]
	rebase = true
